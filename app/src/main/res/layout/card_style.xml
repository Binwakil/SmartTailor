<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:id="@+id/stylecard"
    android:layout_margin="10dp"
    app:ignore="NamespaceTypo">


    <LinearLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/bgg"
            android:layout_gravity="center"
            android:id="@+id/styleimg"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/Linearitems"
            android:layout_margin="10dp">


        <TextView
            android:id="@+id/txt_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Almustapha Abdullahi Wakili"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/itemImageView"/>


            <TextView
                android:id="@+id/txt_Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zango"
                android:textColor="@color/fbutton_color_green_sea"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/itemImageView"/>



        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>