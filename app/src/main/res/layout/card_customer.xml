<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:id="@+id/cardcustmain"
    android:layout_margin="10dp"
    app:ignore="NamespaceTypo">


    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp"
        android:layout_margin="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_customers"
            android:id="@+id/custImageView"
            android:layout_margin="10dp"
            app1:civ_border_width="2dp"
            app1:civ_border_color="@color/fbutton_color_green_sea">

        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/custImageView"
            android:id="@+id/Linearitems"
            android:layout_margin="10dp">




        <TextView
            android:id="@+id/txt_CName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Almustapha Abdullahi Wakili"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/itemImageView"/>

        <TextView
            android:id="@+id/txt_CPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08052865258"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/itemImageView"/>

            <TextView
                android:id="@+id/txt_CAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zango"
                android:textColor="@color/fbutton_color_green_sea"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/itemImageView"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Linearitems">

        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>